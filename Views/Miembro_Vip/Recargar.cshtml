@model SuperChampiniones.Models.Miembro_Vip

@{
    ViewData["Title"] = "Recargar Saldo";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SuperChampiniones</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        body {
            background-color: #0074D9; /* Color de fondo azul suave */
            color: #ffffff;
            font-family: 'Arial', sans-serif;
        }

        .form-group {
            margin-bottom: 15px;
        }

        label.control-label {
            font-weight: bold;
        }

        input[type="submit"].btn-primary {
            background-color: #28a745; /* Botón de guardar verde */
            border-color: #28a745;
        }

            input[type="submit"].btn-primary:hover {
                background-color: #218838; /* Hover más oscuro */
                border-color: #218838;
            }

        hr {
            border-top: 2px solid #000000; /* Línea horizontal más gruesa y negra */
        }
    </style>
</head>
<body>
    <div class="container">
        <main role="main" class="pb-3">
            <h1>Recargar Saldo</h1>

            <h4>Miembro VIP: @Model.Nombre</h4>
            <p>Saldo Actual: @Model.Saldo</p>
            <hr />

            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Recargar" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group">
                            <label for="montoRecarga" class="control-label">Monto a Recargar</label>
                            <input type="number" id="montoRecarga" name="montoRecarga" class="form-control" />
                            <span asp-validation-for="montoRecarga" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Aceptar</button>
                        </div>
                        @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-secondary" })
                    </form>
                </div>
            </div>
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
