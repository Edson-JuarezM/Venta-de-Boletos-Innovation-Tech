@model SuperChampiniones.Models.Partido

@{
    ViewData["Title"] = "Detalles";
}

<h1>Details</h1>

<div class="container bg-image">
    <div class="row mb-4">
        <div class="col text-center">
            <h4>Partido</h4>
        </div>
    </div>
    <div class="row text-center mb-4">
        <div class="col-md-5">
            <img src="~/escudos/@Model.UrlEscudoA" class="img-thumbnail mb-2" width="180px" />
            <div class="team-name">@Html.DisplayFor(model => model.EquipoA)</div>
        </div>
        <div class="col-md-2 d-flex flex-column align-items-center justify-content-center">
            <div class="match-time">
                <div>@Html.DisplayFor(model => model.Fecha_Hora)</div>
                <div>VS</div>
            </div>
        </div>
        <div class="col-md-5">
            <img src="~/escudos/@Model.UrlEscudoB" class="img-thumbnail mb-2" width="180px" />
            <div class="team-name">@Html.DisplayFor(model => model.EquipoB)</div>
        </div>
    </div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EquipoA)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EquipoA)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EquipoB)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EquipoB)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Fecha_Hora)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Fecha_Hora)
        </dd>
    </dl>
    <div class="row">
        <div class="col text-center">
            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.Id">Editar</a>
            <a class="btn btn-secondary" asp-action="Index">Volver a la Lista</a>
        </div>
    </div>
</div>

<style>
    .bg-image {
        background-image: url('https://wallpapers.com/images/hd/uefa-champions-league-football-club-trophy-1w0nb9jvfxvqe3js.jpg'); 
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
    }

    .match-time {
        text-align: center;
        font-size: 24px;
    }

    .team-name {
        font-size: 20px;
    }

    h1, h4, .team-name, .match-time, dt, dd, .btn {
        color: white; 
    }
</style>
