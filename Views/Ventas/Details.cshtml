@model SuperChampiniones.Models.Venta

@{
    Layout = null;
    var qrUrl = Url.Action("GenerateQR", "Ventas", new { qrText = Model.NroRecibo.ToString() });
}

<!DOCTYPE html>
<html>
<head>
    <title>Recibo de Venta</title>
    <style>
        .ticket {
            width: 300px;
            border: 1px solid black;
            padding: 10px;
            font-family: Arial, sans-serif;
            margin: 0 auto;
        }

        .header {
            text-align: center;
        }

        .details {
            margin-top: 10px;
        }

            .details dt {
                float: left;
                clear: left;
                width: 100px;
                font-weight: bold;
            }

            .details dd {
                float: left;
                margin: 0 0 5px 0;
            }

        .match {
            text-align: center;
            margin-top: 20px;
        }

        .logos {
            display: flex;
            justify-content: space-between;
            margin-top: 20px;
        }

            .logos img {
                width: 50px;
                height: 50px;
            }

        .clearfix {
            clear: both;
        }

        .qr-code {
            text-align: center;
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="ticket">
        <div class="header">
            <h1>Super Champiñones FC</h1>
            <p>Dirección: Av. Siempre Viva 742</p>
            <p>Teléfono: 12345678</p>
            <p>Ticket Número: @Html.DisplayFor(model => model.NroRecibo)</p>
        </div>
        <hr />
        <div class="details">
            <dl>
                <dt>Fecha:</dt>
                <dd>@Html.DisplayFor(model => model.Fecha)</dd>
                <dt>Sector:</dt>
                <dd>@Html.DisplayFor(model => model.Sector)</dd>
                <dt>Usuario:</dt>
                <dd>@Html.DisplayFor(model => model.Usuario.Email)</dd>
                <dt>Miembro VIP:</dt>
                <dd>@Html.DisplayFor(model => model.Miembro_VipId)</dd>
            </dl>
            <div class="clearfix"></div>
        </div>
        <div class="match">
            <h2>15 de Abril</h2>
            <h2>16:30</h2>
            <<div class="logos">
                <img src="@Url.Content("~/escudos/" + Model.Partido.UrlEscudoA)" alt="Logo equipo A">
                <span>VS</span>
                <img src="@Url.Content("~/escudos/" + Model.Partido.UrlEscudoB)" alt="Logo equipo B">
            </div>
            <h3>@Html.DisplayFor(model => model.Partido.EquipoA) vs @Html.DisplayFor(model => model.Partido.EquipoB)</h3>
        </div>
        <div class="details">
            <p>Sector @Html.DisplayFor(model => model.Sector)</p>
        </div>
        <div class="qr-code">
            <img src="@qrUrl" alt="QR Code" />
        </div>
        <div class="details">
            <button onclick="window.print()">Imprimir</button>
        </div>
    </div>
</body>
</html>
