@model SuperChampiniones.Models.Usuario

@{
    ViewData["Title"] = "Eliminar";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SuperChampiniones</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        body {
            background-color: #0074D9; /* Color de fondo azul suave */
            color: #ffffff;
            font-family: 'Arial', sans-serif;
        }

        .row dt {
            font-weight: bold;
        }

        hr {
            border-top: 2px solid #000000; /* Línea horizontal más gruesa y negra */
        }

        .btn-eliminar {
            color: #ffffff;
            background-color: #dc3545; /* Botón de eliminar rojo */
            border-color: #dc3545;
            padding: 8px 16px;
            border-radius: 5px;
            text-decoration: none;
            margin-right: 8px;
        }

            .btn-eliminar:hover {
                background-color: #c82333; /* Hover más oscuro */
                border-color: #c82333;
            }

        .btn-volver {
            color: #000000; /* Color del texto negro */
            text-decoration: none;
        }
    </style>
</head>
<body>
    <div class="container">
        <main role="main" class="pb-3">
            <h1>Eliminar</h1>

            <div>
                <h3>¿Estás seguro de que quieres eliminar esto?</h3>
                <div>
                    <h4>Usuario</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Email)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Email)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Nombre)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Nombre)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Rol)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Rol)
                        </dd>
                    </dl>
                </div>
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Eliminar" class="btn btn-eliminar" /> |
                    <a class="btn-volver" asp-action="Index">Volver a la Lista</a>
                </form>
            </div>
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
